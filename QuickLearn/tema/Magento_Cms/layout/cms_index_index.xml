    	<move element="aditional.block" destination="container.home" before="-" />
        <referenceContainer name="content">
            <container name="container.home" htmlTag="div" htmlClass="containerHome containerClass" before="-">
			    <block name="home.content" template="Magento_Theme::html/home-content.phtml">
                    <arguments>
                       <argument name="home_msg" xsi:type="string">Carrega somente na home</argument>
                    </arguments>
                </block>
			</container>
        </referenceContainer>
    </body>
</page>